# determine the action and the folder, $@ then contains only the files
action=$1; shift;
folder=$1; shift;

# check the action
case $action in
create)
exec peazip "-add2archive-add" "$@"
;;

extract-here)
exec peazip "-ext2here" "$@"
;;

extract-to)
exec peazip -ext2to "$@"
;;

*)
echo "unsupported action '$action'" >&2
exit 1
esac
